<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXProgressSpinner?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.Rating?>

<BorderPane prefHeight="720.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.librarymanager.app.RatingController">

   <center>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label fx:id="ratingLabel" layoutX="90.0" layoutY="44.0" style="-fx-font-weight: 800;" text="Rate this book">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <Rating fx:id="rating" layoutX="90.0" layoutY="102.0" prefHeight="32.0" prefWidth="218.0" rating="0.0" />
            <Label layoutX="90.0" layoutY="162.0" style="-fx-font-weight: 700;" text="Write a review:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextArea fx:id="content" layoutX="90.0" layoutY="198.0" prefHeight="193.0" prefWidth="986.0" />
            <MFXButton fx:id="submitButton" layoutX="90.0" layoutY="408.0" onAction="#post" prefHeight="26.0" prefWidth="988.0" style="-fx-background-color: #3872e8;" text="Post" />
            <MFXProgressSpinner fx:id="loader" layoutX="570.0" layoutY="408.0" prefHeight="26.0" prefWidth="26.0" />
         </children>
      </AnchorPane>
   </center>
   <top>
       <fx:include prefHeight="170.0" source="topbar.fxml" />
   </top>
</BorderPane>
